{
  "name": "@quiver/chrisesplin.com",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/deltaepsilon/chrisesplin.com.git",
  "author": "Chris Esplin <chris@christopheresplin.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "docker-compose build",
    "dev": "docker-compose build workspace && docker-compose run --service-ports --rm workspace zsh",
    "connect": "docker exec -it workspace-chrisesplin.com zsh",
    "ci:login": "npx firebase login:ci --no-localhost",
    "ci:build": "docker build --tag=chrisesplin.com .",
    "ci:interactive": "docker run -it --rm chrisesplin.com sh",
    "ci:pull": "docker pull us.gcr.io/chrisesplin.com/chrisesplin.com:latest",
    "ci:latest": "docker run -it --rm us.gcr.io/chrisesplin.com/chrisesplin.com:latest sh",
    "windows:watch": "powershell ./bin/watch.ps1"
  }
}
